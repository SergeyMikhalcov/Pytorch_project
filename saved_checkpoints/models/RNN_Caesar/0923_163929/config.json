{
    "name": "RNN_Caesar",
    "n_gpu": 1,
    "arch": {
        "type": "SimpleRNN",
        "args": {}
    },
    "data_loader": {
        "type": "CaesarEngDataLoader",
        "args": {
            "data_dir": "data_rnn\\(2) Catching Fire.txt",
            "batch_size": 250,
            "shuffle": false,
            "validation_split": 0.2,
            "num_workers": 6,
            "key": 15,
            "step_for_samples": 10
        }
    },
    "optimizer": {
        "type": "AdamW",
        "args": {
            "lr": 0.05,
            "weight_decay": 1e-05
        }
    },
    "loss": "ce_loss_rnn",
    "metrics": [
        "accuracy"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 5,
            "gamma": 0.8
        }
    },
    "trainer": {
        "epochs": 100,
        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        "monitor": "min val_loss",
        "early_stop": 20,
        "tensorboard": true
    }
}